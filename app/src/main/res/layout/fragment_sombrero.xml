<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/fondoPrincipal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Cabecera con saludo y botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="31dp">

            <!-- Texto de bienvenida -->
            <TextView
                android:id="@+id/tvBuenosDias"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Buenos días!"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#432534"
                android:gravity="start"/>
        </LinearLayout>

        <!-- Barra de búsqueda -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_rectangulo">

            <!-- Campo de búsqueda -->
            <EditText
                android:id="@+id/etBuscar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="¿Qué se te antoja hoy?"
                android:textColorHint="#FFFFFF"
                android:gravity="center"
                android:paddingEnd="50dp"
                android:background="@android:color/transparent"
                android:textColor="#FFFFFF" />

            <!-- Botón de búsqueda -->
            <ImageButton
                android:id="@+id/btnBuscar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="end|center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/img_image3"
                android:scaleType="fitCenter"
                android:contentDescription="@string/buscar"
                android:padding="9dp"/>
        </FrameLayout>

        <!-- Título de la sección Categorías -->
        <TextView
            android:id="@+id/tvCategorias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categorías"
            android:textSize="27sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="20dp"/>

        <!-- Contenedor de las categorías -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:padding="8dp">

            <!-- Categoría 1 -->
            <FrameLayout
                android:id="@+id/flCategoria1"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:layout_margin="4dp">

                <ImageView
                    android:id="@+id/ivCategoria1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/categoria1"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tvCategoria1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Postres"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </FrameLayout>

            <!-- Categoría 2 -->
            <FrameLayout
                android:id="@+id/flCategoria2"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:layout_margin="4dp">

                <ImageView
                    android:id="@+id/ivCategoria2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/categoria2"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tvCategoria2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Sándwiches"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </FrameLayout>

            <!-- Categoría 3 -->
            <FrameLayout
                android:id="@+id/flCategoria3"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:layout_margin="4dp">

                <ImageView
                    android:id="@+id/ivCategoria3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/categoria3"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tvCategoria3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Tortas"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </FrameLayout>

            <!-- Categoría 4 -->
            <FrameLayout
                android:id="@+id/flCategoria4"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:layout_margin="4dp">

                <ImageView
                    android:id="@+id/ivCategoria4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/categoria4"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tvCategoria4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Empanadas"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </FrameLayout>
        </GridLayout>

    </LinearLayout>
</ScrollView>
