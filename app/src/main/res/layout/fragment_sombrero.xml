<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="31dp">

            <TextView
                android:id="@+id/tvBuenosDias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buenos días!"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#432534"
                android:layout_marginEnd="26dp"/>

            <ImageButton
                android:id="@+id/btnCarrito"
                android:layout_width="64dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_carrito"
                android:contentDescription="@string/carrito"
                android:layout_marginEnd="16dp"/>

            <ImageButton
                android:id="@+id/btnHistorial"
                android:layout_width="64dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_historial"
                android:contentDescription="@string/historial" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_rectangulo">

            <EditText
                android:id="@+id/etBuscar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="¿Qué se te antoja hoy?"
                android:textColorHint="#FFFFFF"
                android:gravity="center"
                android:paddingEnd="50dp"
                android:background="@android:color/transparent"
                android:textColor="#FFFFFF" />

            <ImageButton
                android:id="@+id/btnBuscar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="end|center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/img_image3"
                android:scaleType="fitCenter"
                android:contentDescription="@string/buscar"
                android:padding="9dp"/>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categorías"
            android:textSize="27sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="387dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="378dp"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:padding="8dp"
                android:rowCount="2">

                <!-- Primer elemento de la cuadrícula -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/categoria1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Postres"
                        android:textColor="#432534"
                        android:textSize="23sp"
                        android:textStyle="bold" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/categoria2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Sanguches"
                        android:textColor="#432534"
                        android:textSize="23sp"
                        android:textStyle="bold" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/categoria3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Tortas"
                        android:textColor="#432534"
                        android:textSize="23sp"
                        android:textStyle="bold" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/categoria4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Empanadas"
                        android:textColor="#432534"
                        android:textSize="23sp"
                        android:textStyle="bold" />
                </FrameLayout>


            </GridLayout>
        </LinearLayout>


    </LinearLayout>
</ScrollView>
