<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/bg_tarjeta"
    android:padding="16dp"
    android:layout_margin="8dp">

    <!-- Chip de la tarjeta -->
    <ImageView
        android:id="@+id/ic_chip"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_chip_tarjeta"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>

    <!-- NÃºmero de la tarjeta -->
    <TextView
        android:id="@+id/tvNumeroTarjeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234 5678 9123 4567"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_below="@id/ic_chip"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>

    <!-- Nombre del Titular -->
    <TextView
        android:id="@+id/tvNombreTitular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jean Phool Jara Ulloa"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_below="@id/tvNumeroTarjeta"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"/>

    <!-- Etiqueta "Valid Thru" -->
    <TextView
        android:id="@+id/tvValidThru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valid Thru"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:layout_below="@id/tvNombreTitular"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"/>

    <!-- Fecha de Vencimiento -->
    <TextView
        android:id="@+id/tvFechaVencimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/23"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:layout_below="@id/tvValidThru"
        android:layout_marginTop="4dp"
        android:layout_alignLeft="@id/tvValidThru"/>

    <!-- Logo de VISA -->
    <ImageView
        android:id="@+id/logoVisa"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_visa_logo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"/>

</RelativeLayout>
